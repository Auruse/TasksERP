@model  IEnumerable<TasksERP.Models.Tickets>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

            <!-- partial -->
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 grid-margin stretch-card">
                <div class="card card-statistics">
                    <div class="card-body">
                        <div class="clearfix">
                            <div class="float-left">
                                <i class="mdi mdi-cube text-danger icon-lg"></i>
                            </div>
                            <div class="float-right">
                                <p class="mb-0 text-right">Новые продажи</p>
                                <div class="fluid-container">
                                    <h3 class="font-weight-medium text-right mb-0">1455</h3>
                                </div>
                            </div>
                        </div>
                        <p class="text-muted mt-3 mb-0">
                            <i class="mdi mdi-reload mr-1" aria-hidden="true"></i> 15 - в режиме ожидания
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 grid-margin stretch-card">
                <div class="card card-statistics">
                    <div class="card-body">
                        <div class="clearfix">
                            <div class="float-left">
                                <i class="mdi mdi-receipt text-warning icon-lg"></i>
                            </div>
                            <div class="float-right">
                                <p class="mb-0 text-right">Возвраты заявлены</p>
                                <div class="fluid-container">
                                    <h3 class="font-weight-medium text-right mb-0">50</h3>
                                </div>
                            </div>
                        </div>
                        <p class="text-muted mt-3 mb-0">
                            <i class="mdi mdi-bookmark-outline mr-1" aria-hidden="true"></i>45 - брак
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 grid-margin stretch-card">
                <div class="card card-statistics">
                    <div class="card-body">
                        <div class="clearfix">
                            <div class="float-left">
                                <i class="mdi mdi-poll-box text-success icon-lg"></i>
                            </div>
                            <div class="float-right">
                                <p class="mb-0 text-right">Продано</p>
                                <div class="fluid-container">
                                    <h3 class="font-weight-medium text-right mb-0">1093</h3>
                                </div>
                            </div>
                        </div>
                        <p class="text-muted mt-3 mb-0">
                            <i class="mdi mdi-calendar mr-1" aria-hidden="true"></i>продано на @DateTime.Now.ToString("dd.MM.yyyy") 
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 grid-margin stretch-card">
                <div class="card card-statistics">
                    <div class="card-body">
                        <div class="clearfix">
                            <div class="float-left">
                                <i class="mdi mdi-account-location text-info icon-lg"></i>
                            </div>
                            <div class="float-right">
                                <p class="mb-0 text-right">Сотрудники</p>
                                <div class="fluid-container">
                                    <h3 class="font-weight-medium text-right mb-0">146</h3>
                                </div>
                            </div>
                        </div>
                        <p class="text-muted mt-3 mb-0">
                            <i class="mdi mdi-sim-off mr-1" aria-hidden="true"></i>5 - отсутствуют
                        </p>
                       
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-7 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="row d-none d-sm-flex mb-4">
                            <div class="col-4">
                                <h5 class="text-primary">Новых клиентов</h5>
                                <p>57</p>
                            </div>
                            <div class="col-4">
                                <h5 class="text-primary">Доход (макс.), руб.</h5>
                                <p>145 673</p>
                            </div>
                            <div class="col-4">
                                <h5 class="text-primary">Рентабельность, %</h5>
                                <p>12,5</p>
                            </div>
                        </div>
                        <div class="chart-container">
                            <div class="chartjs-size-monitor" style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;"><div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div></div><div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:200%;height:200%;left:0; top:0"></div></div></div>
                            <canvas id="dashboard-area-chart" height="215" style="display: block; width: 807px; height: 215px;" width="807" class="chartjs-render-monitor"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title text-primary mb-5">Аналитика</h2>
                        <div class="wrapper d-flex justify-content-between">
                            <div class="side-left">
                                <p class="mb-2">Лучший результат</p>
                                <p class="display-3 mb-4 font-weight-light">+25.2%</p>
                            </div>
                            <div class="side-right">
                                <small class="text-muted">2019</small>
                            </div>
                        </div>
                        <div class="wrapper d-flex justify-content-between">
                            <div class="side-left">
                                <p class="mb-2">Худший результат</p>
                                <p class="display-3 mb-5 font-weight-light">-11.3%</p>
                            </div>
                            <div class="side-right">
                                <small class="text-muted">2018</small>
                            </div>
                        </div>
                        <div class="wrapper">
                            <div class="d-flex justify-content-between">
                                <p class="mb-2">Продажи vs Склад</p>
                                <p class="mb-2 text-primary">88%</p>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-primary progress-bar-striped progress-bar-animated" role="progressbar" style="width: 88%" aria-valuenow="88" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="wrapper mt-4">
                            <div class="d-flex justify-content-between">
                                <p class="mb-2">Новые бренды</p>
                                <p class="mb-2 text-success">56%</p>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-success progress-bar-striped progress-bar-animated" role="progressbar" style="width: 56%" aria-valuenow="56" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>    
      
