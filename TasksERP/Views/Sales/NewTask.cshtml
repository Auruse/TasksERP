                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">New Task</h4>
                                    <p class="card-description">
                                        Task Creation
                                    </p>
                                    <form class="forms-sample">
                                        <div class="form-group row">
                                            <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Owner</label>
                                            <div class="col-sm-9">
                                                @Html.EditorFor(model => model.Owner, new { htmlAttributes = new { @class = "form-control", placeholder = "Your email" } })                                                
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="exampleInputPassword2" class="col-sm-3 col-form-label">Subject</label>
                                            <div class="col-sm-9">
                                                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", placeholder = "Problem Description In Brief" } })
                                               
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleTextarea1">Description</label>
                                            @Html.TextAreaFor(model => model.Description, new {  @class = "form-control", rows = "2" , id = "exampleTextarea1"  })
                                            
                                        </div>
                                        <button type="submit" class="btn btn-success mr-xl-5">Submit</button>
                                        <button class="btn btn-light">Cancel</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                    </div>
                <!-- content-wrapper ends -->
