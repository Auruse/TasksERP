@model TasksERP.Models.Tickets
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 

            <div class="main-panel">
                <div class="content-wrapper">
 
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Новая задача</h4>
                                    <p class="card-description">
                                        Task Creation
                                    </p>
                                    <form class="forms-sample">
                                        <div class="form-group row">
                                            <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Заявитель</label>
                                            <div class="col-sm-9">
                                                @Html.EditorFor(model => model.Owner, new { htmlAttributes = new { @class = "form-control", placeholder = "Your email" } })                                                
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="exampleInputPassword2" class="col-sm-3 col-form-label">Тема сообщения</label>
                                            <div class="col-sm-9">
                                                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", placeholder = "Problem Description In Brief" } })
                                               
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleTextarea1">Описание</label>
                                            @Html.TextAreaFor(model => model.Description, new {  @class = "form-control", rows = "12" , id = "exampleTextarea1"  })
                                            
                                        </div>
                                        <button type="submit" class="btn btn-success mr-xl-5">Отправить</button>
                                        <button class="btn btn-light">Отменить</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                    </div>
                <!-- content-wrapper ends -->
                <!-- partial:partials/_footer.html -->
               
                <!-- partial -->
            </div>
            